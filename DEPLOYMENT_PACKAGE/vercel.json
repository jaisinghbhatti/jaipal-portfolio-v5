{
  "version": 2,
  "name": "jaipal-singh-portfolio",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "functions": {
    "frontend/build/**": {
      "maxDuration": 30
    }
  },
  "env": {
    "REACT_APP_BACKEND_URL": "@backend_url"
  }
}